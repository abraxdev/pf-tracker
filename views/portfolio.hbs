{{> header}}

<div class="max-w-7xl mx-auto">

    {{#if error}}
    <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded mb-6">
        <p class="text-red-700">{{error}}</p>
    </div>
    {{/if}}

    <!-- Filters -->
    <div class="card mb-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Portfolio</h1>
        </div>

        <!-- Quick Filters -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4 text-sm">
            <!-- Type Multi-Select -->
            <div>
                <label class="label-fintech">Tipologia</label>
                <div class="multi-select-wrapper">
                    <div class="multi-select-container">
                        <button type="button" id="filter-type-toggle" class="multi-select-toggle input-fintech text-left flex justify-between items-center">
                            <span class="multi-select-placeholder">Tutte le tipologie</span>
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div id="filter-type-dropdown" class="multi-select-dropdown hidden">
                            <div class="multi-select-options" id="filter-type-options">
                                <div class="p-2 text-center text-gray-500 text-xs">Caricamento...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sorting -->
            <div>
                <label class="label-fintech">Ordina per</label>
                <select id="sort-by" class="input-fintech">
                    <option value="value">Valore (Posizione)</option>
                    <option value="variazione_perc">Variazione %</option>
                    <option value="nome">Nome</option>
                    <option value="ticker">Ticker</option>
                    <option value="tipologia">Tipologia</option>
                </select>
            </div>

            <div>
                <label class="label-fintech">Direzione</label>
                <select id="sort-order" class="input-fintech">
                    <option value="desc">Decrescente</option>
                    <option value="asc">Crescente</option>
                </select>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-2">
            <button id="apply-filters" class="btn-secondary btn-sm ml-auto">
                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                Applica Filtri
            </button>
            <button id="reset-filters" class="btn-outline-secondary btn-sm">
                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reset
            </button>
        </div>

        <!-- Unified Chips Container -->
        <div id="unified-chips-container" class="flex flex-wrap gap-1 rounded-lg items-center mt-3"></div>
    </div>

    <!-- Portfolio Table -->
    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="portfolio-table">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" data-sort="tipologia">
                            Tipo
                        </th>
                        <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" data-sort="nome">
                            Nome
                        </th>
                        <th class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 w-24" data-sort="ticker">
                            Ticker
                        </th>
                        <th class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" data-sort="div_yield">
                            Dividendo
                        </th>
                        <th class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 w-24" data-sort="qty">
                            Quantità
                        </th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 w-24" data-sort="last_price">
                            Prezzo
                        </th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" data-sort="value">
                            Valore
                        </th>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" data-sort="variazione_perc">
                            Variaz. %
                        </th>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Azioni</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="portfolio-tbody">
                    <!-- Portfolio positions will be loaded via JavaScript -->
                    <tr>
                        <td colspan="9" class="px-4 py-8 text-center text-gray-500">
                            <span class="spinner"></span>
                            <span class="ml-2">Caricamento portfolio...</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Floating Summary Bar -->
    <div id="summary-bar" class="fixed bottom-0 left-0 w-full bg-white border-t border-gray-200 shadow-lg transition-all duration-300 z-40">
        <div class="container mx-auto">
            <div class="flex items-stretch h-16">
                <!-- Record Count Section -->
                <div class="flex items-center px-6 border-r border-gray-200 bg-slate-50">
                    <div class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500 font-medium">Titoli visualizzati</div>
                            <div id="summary-count" class="font-mono font-bold text-gray-900">0</div>
                        </div>
                    </div>
                </div>

                <!-- Spacer - grows to push totals to the right -->
                <div class="flex-1 flex items-center px-4">
                    <button id="exp-csv-btn" class="btn-primary btn-sm text-xs">
                        <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Scarica CSV
                    </button>

                    <button id="view-graph" class="btn-secondary btn-sm text-xs ml-2">
                        <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                        </svg>
                        Visualizza grafici
                    </button>
                </div>

                <!-- Total Portfolio Value -->
                <div class="flex items-center gap-0">
                    <div class="px-6 text-center">
                        <div class="text-xs text-gray-500 font-medium mb-0.5">Valore Totale Portfolio</div>
                        <div id="summary-total" class="font-mono font-bold text-purple-600">€ 0,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
        <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Conferma Eliminazione</h3>
            <p class="text-gray-600 mb-6">Sei sicuro di voler eliminare questo titolo dal portfolio?</p>
            <div class="bg-gray-50 p-3 rounded mb-6">
                <div class="text-sm text-gray-600">
                    <strong id="delete-modal-title"></strong><br>
                    <span class="text-xs text-gray-500" id="delete-modal-isin"></span>
                </div>
            </div>
            <div class="flex gap-3 justify-end">
                <button id="cancel-delete" class="btn-outline-secondary btn-sm">Annulla</button>
                <button id="confirm-delete" class="btn-danger btn-sm">Elimina</button>
            </div>
        </div>
    </div>
</div>

{{> footer}}
<script src="/js/portfolio.js"></script>
