{{> header}}

<div class="container">
    <div class="card">
        <h1 class="text-2xl font-bold text-gray-900 mb-8">Carica File</h1>

        <div id="drop-zone" class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-primary transition-colors cursor-pointer">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <p class="text-lg text-gray-600 mb-2">Trascina i file qui o clicca per selezionarli</p>
            <p class="text-sm text-gray-500">Supportati: .xlsx, .xls, .pdf (max 10MB)</p>
            <input type="file" id="file-input" class="hidden" multiple accept=".xlsx,.xls,.pdf">
        </div>

        <div id="file-list" class="mt-6 space-y-2 hidden">
            <h3 class="font-semibold text-gray-900 mb-2">File selezionati:</h3>
        </div>

        <button id="upload-btn" class="btn-primary mt-6 w-full hidden">
            Carica e Analizza
        </button>
    </div>

    <div class="mt-8 card">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Formati Supportati</h2>
        <div class="space-y-3">
            <div class="flex items-start">
                <span class="badge badge-widiba mr-3">Widiba</span>
                <p class="text-sm text-gray-600">File Excel (.xlsx) con colonne: DATA CONT., CAUSALE, DESCRIZIONE, IMPORTO</p>
            </div>
            <div class="flex items-start">
                <span class="badge badge-relaxbanking mr-3">RelaxBanking</span>
                <p class="text-sm text-gray-600">File TSV (.xls) con colonne: Data contabile, Importo, Descrizione</p>
            </div>
            <div class="flex items-start">
                <span class="badge badge-traderepublic mr-3">TradeRepublic</span>
                <p class="text-sm text-gray-600">Estratto conto PDF con tabella transazioni</p>
            </div>
        </div>
    </div>
</div>

<script src="/js/upload.js"></script>

{{> footer}}
