{{> header}}

<div class="max-w-7xl mx-auto">

    {{#if error}}
    <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded mb-6">
        <p class="text-red-700">{{error}}</p>
    </div>
    {{/if}}

    <!-- Filters -->
    <div class="card mb-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Filtra Transazioni</h1>   
            <button id="toggle-advanced-filters" class="btn-ghost btn-sm text-purple-600 hover:text-purple-700">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
                Filtri Avanzati
            </button>
        </div>

        <!-- Quick Filters -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4 text-sm">
            <!-- Bank Multi-Select -->
            <div>
                <label class="label-fintech">Banca</label>
                <div class="multi-select-wrapper">
                    <div class="multi-select-container">
                        <button type="button" id="filter-bank-toggle" class="multi-select-toggle input-fintech text-left flex justify-between items-center">
                            <span class="multi-select-placeholder">Tutte le banche</span>
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div id="filter-bank-dropdown" class="multi-select-dropdown hidden">
                            <div class="multi-select-options" id="filter-bank-options">
                                <div class="p-2 text-center text-gray-500 text-xs">Caricamento...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Type Multi-Select -->
            <div>
                <label class="label-fintech">Tipo Transazione</label>
                <div class="multi-select-wrapper">
                    <div class="multi-select-container">
                        <button type="button" id="filter-type-toggle" class="multi-select-toggle input-fintech text-left flex justify-between items-center">
                            <span class="multi-select-placeholder">Tutti i tipi</span>
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div id="filter-type-dropdown" class="multi-select-dropdown hidden">
                            <div class="multi-select-options" id="filter-type-options">
                                <div class="p-2 text-center text-gray-500 text-xs">Caricamento...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Category Multi-Select -->
            <div>
                <label class="label-fintech">Categoria</label>
                <div class="multi-select-wrapper">
                    <div class="multi-select-container">
                        <button type="button" id="filter-category-toggle" class="multi-select-toggle input-fintech text-left flex justify-between items-center">
                            <span class="multi-select-placeholder">Tutte le categorie</span>
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div id="filter-category-dropdown" class="multi-select-dropdown hidden">
                            <div class="multi-select-options" id="filter-category-options">
                                <div class="p-2 text-center text-gray-500 text-xs">Caricamento...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Input -->
            <div>
                <label class="label-fintech">Cerca</label>
                <input type="text" id="filter-search" placeholder="Cerca per descrizione..."
                       class="input-fintech">
            </div>
        </div>

        <!-- Month Filter -->
        <div class="mb-4">
            <label class="label-fintech">Filtra per Mese</label>
            <div class="flex flex-wrap gap-2">
                <div id="month-filter-container">
                    <!-- Month buttons will be generated by JavaScript -->
                </div>
                 <!-- Action Buttons -->
                <button id="apply-filters" class="btn-secondary btn-sm ml-auto">
                    <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                    </svg>
                    Applica Filtri
                </button>
                <button id="reset-filters" class="btn-outline-secondary btn-sm">
                    <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Reset
                </button>
            </div>
        </div>

        <!-- Unified Chips Container -->
        <div id="unified-chips-container" class="flex flex-wrap gap-1 rounded-lg items-center"></div>

        <!-- Advanced Date Range Filter (Initially Hidden) -->
        <div id="advanced-filters" class="hidden border-t border-slate-200 pt-4 mt-4">
            <label class="label-fintech mb-3 block">Intervallo Date Personalizzato</label>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="label-fintech text-sm">Data Inizio</label>
                    <input type="date" id="filter-date-start" class="input-fintech text-sm">
                </div>
                <div>
                    <label class="label-fintech text-sm">Data Fine</label>
                    <input type="date" id="filter-date-end" class="input-fintech text-sm">
                </div>
            </div>
        </div>
 
    </div>

    <!-- Transactions Table -->
    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Banca</th>
                        <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrizione</th>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria</th>
                        <th class="px-8 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Entrate</th>
                        <th class="px-8 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Uscite</th>
                        <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Azioni</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="transactions-tbody">
                    <!-- Transactions will be loaded via JavaScript -->
                    <tr>
                        <td colspan="7" class="px-4 py-8 text-center text-gray-500">
                            <span class="spinner"></span>
                            <span class="ml-2">Caricamento transazioni...</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Load More Button -->
   
    </div>
    <div id="load-more-container" class="border-t border-gray-200 text-center" style="display: none;">
        <button id="load-more-btn" class="btn-primary mt-6">
                Carica altre...
        </button>
    </div>

    <!-- Floating Summary Bar -->
    <div id="summary-bar" class="fixed bottom-0 left-0 w-full bg-white border-t border-gray-200 shadow-lg transition-all duration-300 z-40">
        <div class="container mx-auto">
            <div class="flex items-stretch h-16">
                <!-- Record Count Section -->
                <div class="flex items-center px-6 border-r border-gray-200 bg-slate-50">
                    <div class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500 font-medium">Record visualizzati</div>
                            <div id="summary-count" class="font-mono font-bold text-gray-900">0</div>
                        </div>
                    </div>
                </div>

                <!-- Spacer - grows to push totals to the right -->
                <div class="flex-1 flex items-center px-4">
                    <button id="exp-csv-btn" class="btn-primary btn-sm text-xs">
                        <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Scarica CSV
                    </button>

                     <button id="view-graph" class="btn-secondary btn-sm text-xs ml-2">
                        <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                        </svg>
                        Visualizza grafici
                    </button>
                </div>

                <!-- Totals Section - aligned with table columns -->
                <div class="flex items-center gap-0 sum-wrap">
                    <!-- Total Entrate -->
                    <div class="px-6 text-center border-r border-gray-200">
                        <div class="text-xs text-gray-500 font-medium mb-0.5">Somma entrate</div>
                        <div id="summary-entrate" class="font-mono font-bold text-green-600">€ 0,00</div>
                    </div>

                    <!-- Total Uscite -->
                    <div class="px-6 text-center">
                        <div class="text-xs text-gray-500 font-medium mb-0.5">Somma uscite</div>
                        <div id="summary-uscite" class="font-mono font-bold text-red-600">€ 0,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add padding to bottom of page to prevent content being hidden by fixed bar -->

<!-- Graphs Overlay -->
<div id="graphs-overlay" class="graphs-overlay hidden">
    <div class="graphs-container">
        <!-- Header -->
        <div class="graphs-header">
            <div>
                <h2 class="text-2xl font-bold text-gray-900">Analisi Transazioni</h2>
                <p id="graphs-period" class="text-sm text-gray-600 mt-1"></p>
            </div>
            <button id="close-graphs" class="graphs-close-btn">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Tabs Navigation -->
        <div class="graphs-tabs">
            <button class="graphs-tab active font-mono" data-tab="overview">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Overview
            </button>
            <button class="graphs-tab font-mono" data-tab="categories">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                </svg>
                Categorie
            </button>
            <button class="graphs-tab font-mono" data-tab="passive-income">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Redditi Passivi
            </button>
            <button class="graphs-tab font-mono" data-tab="trends" id="trends-tab" style="display: none;">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Andamento Temporale
            </button>
            <button class="graphs-tab font-mono" data-tab="banks" id="banks-tab" style="display: none;">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Analisi Banche
            </button>
        </div>

        <!-- Tab Contents -->
        <div class="graphs-content">
            <!-- Overview Tab -->
            <div class="graphs-tab-content active" data-content="overview">
                <div class="graphs-grid">
                    <div class="graph-card">
                        <h3 class="graph-card-title">Totali</h3>
                        <div id="chart-totals"></div>
                    </div>
                    <div class="graph-card">
                        <h3 class="graph-card-title">Bilancio</h3>
                        <div id="chart-balance"></div>
                    </div>
                </div>
            </div>

            <!-- Categories Tab -->
            <div class="graphs-tab-content" data-content="categories">
                <div class="graphs-grid">
                    <div class="graph-card">
                        <h3 class="graph-card-title">Uscite per Categoria</h3>
                        <div id="chart-expenses-categories"></div>
                    </div>
                    <div class="graph-card">
                        <h3 class="graph-card-title">Entrate per Categoria</h3>
                        <div id="chart-income-categories"></div>
                    </div>
                </div>
            </div>

            <!-- Passive Income Tab -->
            <div class="graphs-tab-content" data-content="passive-income">
                <div class="graphs-grid">
                    <div class="graph-card">
                        <h3 class="graph-card-title">Redditi Passivi - Breakdown per Categoria</h3>
                        <div id="chart-passive-breakdown"></div>
                    </div>
                    <div class="graph-card">
                        <h3 class="graph-card-title">Andamento Mensile per Tipo</h3>
                        <div id="chart-passive-monthly"></div>
                    </div>
                </div>
            </div>

            <!-- Trends Tab -->
            <div class="graphs-tab-content" data-content="trends">
                <div class="graphs-grid">
                    <div class="graph-card graph-card-full">
                        <h3 class="graph-card-title">Andamento Mensile</h3>
                        <div id="chart-monthly-trends"></div>
                    </div>
                </div>
            </div>

            <!-- Banks Tab -->
            <div class="graphs-tab-content" data-content="banks">
                <div class="graphs-grid">
                    <div class="graph-card">
                        <h3 class="graph-card-title">Distribuzione per Banca</h3>
                        <div id="chart-banks-distribution"></div>
                    </div>
                    <div class="graph-card">
                        <h3 class="graph-card-title">Entrate/Uscite per Banca</h3>
                        <div id="chart-banks-flow"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}
<script src="/js/transactions.js"></script>
