{{> header}}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Transazioni</h1>
        <a href="/upload" class="btn-primary">Carica File</a>
    </div>

    {{#if error}}
    <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded mb-6">
        <p class="text-red-700">{{error}}</p>
    </div>
    {{/if}}

    <!-- Filters -->
    <div class="card mb-6">
        <h3 class="font-semibold text-gray-900 mb-4">Filtri</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Banca</label>
                <select id="filter-bank" class="w-full border-gray-300 rounded-md shadow-sm">
                    <option value="">Tutte</option>
                    <option value="widiba">Widiba</option>
                    <option value="relaxbanking">RelaxBanking</option>
                    <option value="traderepublic">TradeRepublic</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tipo</label>
                <select id="filter-type" class="w-full border-gray-300 rounded-md shadow-sm">
                    <option value="">Tutti</option>
                    <option value="expense">Spesa</option>
                    <option value="income">Entrata</option>
                    <option value="transfer">Bonifico</option>
                    <option value="card">Carta</option>
                    <option value="investment">Investimento</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Categoria</label>
                <select id="filter-category" class="w-full border-gray-300 rounded-md shadow-sm">
                    <option value="">Tutte</option>
                    <option value="groceries">Spesa</option>
                    <option value="restaurants">Ristoranti</option>
                    <option value="fuel">Carburante</option>
                    <option value="utilities">Utenze</option>
                    <option value="transport">Trasporti</option>
                    <option value="subscriptions">Abbonamenti</option>
                    <option value="investments">Investimenti</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Cerca</label>
                <input type="text" id="filter-search" placeholder="Descrizione..."
                       class="w-full border-gray-300 rounded-md shadow-sm">
            </div>
        </div>
        <div class="mt-4 flex gap-2">
            <button id="apply-filters" class="btn-primary">Applica Filtri</button>
            <button id="reset-filters" class="btn-outline">Reset</button>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card overflow-hidden">
        {{#if transactions.length}}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Banca</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrizione</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Importo</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="transactions-tbody">
                    {{#each transactions}}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm text-gray-900">
                            {{formatDate transaction_date}}
                        </td>
                        <td class="px-4 py-3 text-sm">
                            <span class="badge badge-{{bank}}">{{bank}}</span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-900">
                            <div class="" title="{{description}}">
                                {{description}}
                            </div>
                            {{#if merchant}}
                            <div class="text-xs text-gray-500">{{merchant}}</div>
                            {{/if}}
                        </td>
                        <td class="px-4 py-3 text-sm">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                {{category}}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-right font-semibold">
                            {{#if amount_in}}
                            <span class="amount-in">+€ {{formatAmount amount_in}}</span>
                            {{else}}
                            <span class="amount-out">-€ {{formatAmount amount_out}}</span>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nessuna transazione</h3>
            <p class="mt-1 text-sm text-gray-500">Inizia caricando i file bancari.</p>
            <div class="mt-6">
                <a href="/upload" class="btn-primary">Carica File</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<script src="/js/transactions.js"></script>

{{> footer}}
